<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="mysql_meetme"
		transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>java:app/env/jdbc/mysql_meetme</jta-data-source>
		<jar-file>../meetingplannerejb.jar</jar-file>
		<properties>
			<property name="openjpa.jdbc.Schema" value="MEETME" />
			<property name="openjpa.Log" value="log4j" />
			<property name="openjpa.ConnectionFactoryProperties"
				value="PrettyPrint=true, PrettyPrintLineLength=72, PrintParameters=true" />
			<property name="openjpa.RuntimeUnenhancedClasses" value="supported" />
			<property name="openjpa.ConnectionRetainMode" value="transaction" />
			<property name="openjpa.jdbc.DBDictionary" value="JoinSyntax=sql92" />
		</properties>
	</persistence-unit>
</persistence>
